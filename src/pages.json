{
    "easycom": {
        "autoscan": true,
        "custom": {
            "^bc-(.*)": "@/easycom/business-components/bc-$1/index.vue",
            "^uv-(.*)": "@climblee/uv-ui/components/uv-$1/uv-$1.vue",
            "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
        }
    },
    "pages": [
        {
            "path": "pages/storyboard/storyboard",
            "style": {
                "navigationBarTitleText": "",
                "enablePullDownRefresh": false,
                "navigationStyle": "custom"
            }
        },
        {
            "name": "index",
            "path": "pages/index/index",
            "style": {
                "navigationBarTitleText": "",
                "navigationStyle": "custom"
            }
        },
        {
            "name": "businessVoucher",
            "path": "pages/business-voucher/business-voucher",
            "style": {
                "navigationBarTitleText": "",
                "navigationStyle": "custom"
            }
        },
        {
            "name": "applyRecords",
            "path": "pages/apply-records/apply-records",
            "style": {
                "navigationBarTitleText": "",
                "navigationStyle": "custom",
                "enablePullDownRefresh": false
            }
        }
    ],
    "subPackages": [
        {
            "root": "pages/subpackage",
            "pages": [
                {
                    "name": "businessApply",
                    "path": "business-apply/business-apply",
                    "style": {
                        "navigationBarTitleText": "",
                        "navigationStyle": "custom",
                        "enablePullDownRefresh": false
                    }
                },
                {
                    "name": "visitorApply",
                    "path": "visitor-apply/visitor-apply",
                    "style": {
                        "navigationBarTitleText": "",
                        "navigationStyle": "custom",
                        "enablePullDownRefresh": false
                    }
                },
                {
                    "path": "apply-redcord-detail/apply-redcord-detail",
                    "style": {
                        "navigationBarTitleText": "",
                        "navigationStyle": "custom",
                        "enablePullDownRefresh": false
                    }
                },
                {
                    "name": "selectTime",
                    "path": "selectTime/selectTime",
                    "style": {
                        "navigationBarTitleText": "",
                        "enablePullDownRefresh": false,
                        "navigationStyle": "custom"
                    }
                }
            ]
        }
    ],
    "globalStyle": {
        "navigationBarTextStyle": "black",
        "navigationBarTitleText": "",
        "navigationBarBackgroundColor": "#FFFFFF",
    },
    "tabBar": {
        "color": "#000000",
        "selectedColor": "#1AA86C",
        "borderStyle": "white",
        "backgroundColor": "#FFFFFF",
        "list": [
            {
                "pagePath": "pages/index/index",
                "text": "预约申请",
                "iconPath": "static/tab/apply.png",
                "selectedIconPath": "static/tab/apply-selected.png"
            },
            {
                "pagePath": "pages/apply-records/apply-records",
                "text": "预约记录",
                "iconPath": "static/tab/record.png",
                "selectedIconPath": "static/tab/record-selected.png"
            },
            {
                "pagePath": "pages/business-voucher/business-voucher",
                "text": "业务二维码",
                "iconPath": "static/tab/qr-code.png",
                "selectedIconPath": "static/tab/qr-code-selected.png"
            }
        ]
    }
}
